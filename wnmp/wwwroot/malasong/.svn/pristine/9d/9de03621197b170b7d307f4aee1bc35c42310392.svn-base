<{include file='Login/header.html'}>
<style type="text/css">
.order{width: 80%!important;margin:0 auto;}	
.order td,.order th{padding:5px 10px;}
.order th{background:#D4DCE7;}
.order td table{width: 100%;}
.order td textarea{width: 100%;}
button{margin-left:10%;}
</style>
<div class="wrap">
    <div class="container">

        <div id="main">
            
            <div class="con">
            	<a href="./?s=Enroll"><button>返回订单列表</button></a>
            	<table class="order" border="1" >
            		<tr>
            			<th>订单号：</th>
            			<td><{$info.orderid}></td>
            		</tr>
            		<tr>
            			<th>参赛者姓名：</th>
            			<td><{$info.xingming}></td>
            		</tr>
            		<tr>
            			<th>参加赛事：</th>
            			<td><{$info.match}></td>
            		</tr>
            		<tr>
            			<th>订单状态：</th>
            			<td> <{if $info.paystats==5}>
                        等待支付
                        <{elseif $info.paystats==0}>
                        支付完成
                        <{elseif $info.paystats==2}>
                        支付金额不对
                        <{else}>
                        <{$info.paystats}>
                        <{/if}></td>
            		</tr>
            		<tr>
            			<th>订单支付号：</th>
            			<td><{if $info.payorderid}><{$info.payorderid}><{else}>无<{/if}></td>
            		</tr>
            		<tr>
            			<th>支付信息：</th>
            			<td><{if $info.payinfo}><textarea><{$info.payinfo}></textarea><{else}>无<{/if}></td>
            		</tr>
            		<tr>
            			<th>备注：</th>
            			<td><{if $info.beizhu}><{$info.beizhu}><{else}>无<{/if}></td>
            		</tr>
            		<tr>
            			<th>创建时间：</th>
            			<td><{$info.ctime}></td>
            		</tr>
            		<tr>
            			<th>最后修改时间：</th>
            			<td><{$info.utime}></td>
            		</tr>
            		<tr>
            			<th>订单总价：</th>
            			<td>￥<{$info.orderprice}></td>
            		</tr>
            		<tr>
            			<th>包含项目：</th>
            			<td>
	            			<table>
	            				<tr>
	            					<th align="left">已选项目</th>
	            					<th align="left">单价</th>
	            					<th align="left">数量</th>
	            					<th align="left">总价</th>
	            				</tr>
	            				<{foreach from=$list name=n item=i}>
		            			<tr>
		            				<td><{$i.goodscls}></td>
		            				<td>￥<{$i.goodsprice}></td>
		            				<td><{$i.count}></td>
		            				<td>￥<{$i.price}></td>
		            			</tr>
	            				<{/foreach}>
	            			</table>
            			</td>
            		</tr>
            	</table>                
            </div><!--/ con-->            
        </div>    
    </div><!--/ container-->
</div>
<script type="text/javascript">

</script>
<{include file='Login/footer.html'}>