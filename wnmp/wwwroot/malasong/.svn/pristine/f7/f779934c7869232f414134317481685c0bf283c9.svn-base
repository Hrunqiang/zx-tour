*{margin:0;padding:0;}
html{width: 100%;font-size:62.5%}
body{
	width:100%;
	font:normal 1.4em/1.6em "Microsoft YaHei",Verdana,Tahoma;
	background: #fdd39b;
	background-size: 100%;
}
@media screen and (max-width:480px){
	#wrap{
		width:100%;
		overflow:hidden;
	}
}
@media screen and (min-width:480px){
	#wrap{
		width: 480px;
		overflow:hidden;
	}
}
#wrap{
	margin:0 auto;
	position:relative;
}
#top{background: #ffc57b;}
#top>img{width: 100%;}
#lottery{width:80%;margin:0 auto;}
#lottery>div{margin:auto;width:100%;padding-bottom:60%; background-image: url(../images/bx.jpg); background-size: 200% 100%;background-position: 100% 0;}
#lottery>span{position:absolute;left:30%;bottom:30%;width:40%;height:56%;background-image: url(../images/zhizhen.png); background-size: cover;}

#qrcode{
	background: #ffc57b;
	width: 100%;
	padding-bottom: .6rem;
}
.qrcode_t{overflow: hidden;}
.qrcode_t>li{float: left;list-style: none;}
.qrcode_t img{width: 100%;}
.bz{width: 30%;}
.bz_t{width: 66%;margin-left: 2%;}
.bz_t>p{height: 3.2rem;line-height: 2rem;font-size: 1.6rem;color: #720004;}
.bz_t>p>span{font-size: 2.5rem;color: red;}
#qrcode>p{
	color: #FFF;
	width: 90%;
	padding:0 .5rem;
	background: #F66062;
	border-radius: .5rem;
	font-size: 1.2rem;
}
#qrcode>div{
	overflow: hidden;
}
#qrcode>div>div{
	float: left;
	width: 42%;
	margin-left:5%; 
}
#qrcode img{
	border-radius: .5rem;
	width: 100%;
	display: block;
}
#qrcode>div>div>p{
	color:#614523;
	font-size: 1.1rem;
	text-align: center;
}
#qrcode>div>div>div{
	position: relative;
}
#qrcode>div>div>div>p{
	border-radius: .5rem;
	width: 100%;
	font-size: 1.2rem;
	height: 3rem;
	line-height: 3rem;
	text-align: center;
	position: absolute;
	bottom: 0;
	background: #F66062;
	color:#FFF;
	display: none;
}

#result{
	display:none;
	background-size:cover;
	background-repeat: no-repeat;
}
.result_get{
	position: relative;
	width:100%;padding-bottom:80%;
	background-image: url(../images/price_bg.png);
	background-position: 0 120%;
}
.result_lost{
	width:38%;
	margin:0 auto 1rem;	
	padding-bottom:52%;
	background-image: url(../images/xx.png);
}
#result>p{
	position: absolute;
	text-align: center;
	color: #FFF;
}
#res_num{
	width: 50%;
	left:25%;
	bottom:26%;
}
#res_word{
	width: 50%;
	left:25%;
	bottom:63%;
}
#result>img{
	position: absolute;
	width: 36%;
	left:32%;
	bottom:35%;
}
#hunt{
	position: fixed;
	bottom:0;
	left:0;
	color: #6E0600;
	font-size: 1rem;
}