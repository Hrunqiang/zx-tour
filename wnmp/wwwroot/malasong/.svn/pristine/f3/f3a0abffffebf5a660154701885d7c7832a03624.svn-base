var windowheight = $(window).height();
windowheight = windowheight >667?windowheight:667;
var b = $('#header_focus_box');
$(window).load(function() {	

    /*page高度*/
    $('.sectionpage').css({
    	"height":windowheight+"px"
    });

    /*上下居中*/
    $(".vertical_center").each(function(){
    	var $this = $(this);
    	var $parent = $(this).parent();
    	var top = ($parent.innerHeight()-$this.innerHeight())/2
    	$this.css({
    		"top":top+"px"
    	});
  	});

    $('.nav-item>li').hover(function(){
        $(this).find("ul").show(200);
    },function(){
        $(this).find("ul").hide(200);
    });

    /* 首页轮播图 */
    (function(){
        var banner = $('#header_focus_box'),
            item = $('#focus_item_ul'),
            imgs = ["/static/images/index_1.jpg","/static/images/index_2.jpg"],
            total = imgs.length,
            index = -1,
            interval = 15000,
            timer = null;

        if(total == 1) {
            next();
            return;
        }

        dotTpl = '<li></li>';
        for (var i in imgs) {
            item.append(dotTpl);
        };
        item.css({"width":total*36+"px"});

        var dots = item.find('li');

        function show(i){
            $.each(dots, function(i, el){
                dots.eq(i).removeClass('curr')
            });
            dots.eq(i).addClass('curr')
            banner.css({"background-image":"url("+imgs[i]+")"});
        }

        function next(){
            index++;
            index = index > total - 1 ? 0 : index;
            show(index);
        }

        function autoPlay(){
            if(timer) clearInterval(timer);
            timer = setInterval(function(){
                next();
            }, interval);
        }

        $.each(dots,function(i,e){
            $(this).click(function(){
                show(i);
                autoPlay();
            });
        });

        next();
        autoPlay();
    })();

    var account = new Account();

    $('#countdow_day').html(countdow('d'));
    $('#countdow_hour').html(countdow('h'));

    $('.changeCode').click(function(){
        img = $(this).parent().find('img');
        img.attr('src',img.attr('src')+'?'+Math.random());
    });

});
