<{include file='Login/header.html'}>

 <link type="text/css" href="/static/datapicker/timepicker/css/jquery-ui-1.8.17.custom.css" rel="stylesheet" />
     <link type="text/css" href="/static/datapicker/timepicker/css/jquery-ui-timepicker-addon.css" rel="stylesheet" />
    <script type="text/javascript" src="/static/datapicker/timepicker/js/jquery-1.7.1.min.js"></script>
	<script type="text/javascript" src="/static/datapicker/timepicker/js/jquery-ui-1.8.17.custom.min.js"></script>
	<script type="text/javascript" src="/static/datapicker/timepicker/js/jquery-ui-timepicker-addon.js"></script>
    <script type="text/javascript" src="/static/datapicker/timepicker/js/jquery-ui-timepicker-zh-CN.js"></script>

<{if $ac=='add' || $ac=='edit'}>
<div class="wrap">
    <div class="container">
        <div id="main">
            <div class="con box-green">
                <form action="?s=AdvertClass&a=content&ac=<{$ac}>" method='post' id="modify_form">
                <input type="hidden" name="add_time" value="<{$now}>"/>
                <input type="hidden" name="id" value="<{$id}>"/>
                <div class="box-header">
                    <h4>添加内容</h4>
                </div>
                <div class="box-content">
                    <table class="table-font" style="width:680px;">
                        <tr>
                            <th class="w120">选择分类：</th>
                            <td>
                            <select name="cid" id="cid" e="false">
				            <option value="0">-----选择分类-----</option>
				            <{$select}>
				         	</select>
                            </td>
                        </tr>
                        <tr>
                            <th class="w120">名称：</th>
                            <td>
	                            <input type="text" e="false" style="color:<{$data.color|escape:html}>" id="js_test_link"  name="name" class="textinput w270" value="<{$data.name|escape:html}>" />
                            </td>
                        </tr>
                        <tr>
                            <th class="w120">投放时间：</th>
                            <td>
                            起始时间:<input name="stime" id="stime" e="false"  type="text" value="<{$data.stime|escape:html}>" />至<input name="etime" id="etime" e="false" type="text" value="<{$data.etime|escape:html}>" />
                            </td>
                        </tr>
                        <tr>
                            <th class="w120">总预算：</th>
                            <td>
                            <input type="text" name="totle_budget" e="false" value="<{$data.totle_budget|escape:html}>" onkeyup="value=value.replace(/[^\d|^.]/g,'');" /> 元
                            </td>
                        </tr>
                        <tr>
                            <th class="w120">每日预算：</th>
                            <td>
                            <input type="text" name="perd_budget" e="false" value="<{$data.perd_budget|escape:html}>" onkeyup="value=value.replace(/[^\d|^.]/g,'');" /> 元
                            </td>
                        </tr>
                        <tr>
                            <th class="w120">消耗预算：</th>
                            <td>
                            <input type="text" name="" value="<{$data.used_budget|escape:html}>"  disabled="disabled" /> 元
                            </td>
                        </tr>
                        <tr>
                            <th class="w120">单价：</th>
                            <td>
                            <input type="text" name="price" e="false" value="<{$data.price|escape:html}>"  onkeyup="value=value.replace(/[^\d|^.]/g,'');"/> 元
                            </td>
                        </tr>
                        <tr>
                            <th class="w120">用户分成：</th>
                            <td>
                            <input type="text" name="divide" e="false" value="<{$data.divide|escape:html}>"  onkeyup="value=value.replace(/[^\d|^.]/g,'');"/> 元
                            </td>
                        </tr>
                        <tr>
                            <th class="w120">展示量：</th>
                            <td>
                            <input type="text" name="" value="<{$data.display_num|escape:html}>" disabled="disabled"/>
                            </td>
                        </tr>
                        <tr>
                            <th class="w120">有效展示：</th>
                            <td>
                            <input type="text" name="" value="<{$data.valuable_num|escape:html}>" disabled="disabled"/>
                            </td>
                        </tr>
                        <tr>
                            <th class="w120">投放方式：</th>
                            <td>
                            <select name="method" e="false">
                            	<option value="">选择投放方式</option>
                            	<option value="CPI" <{if $data.method=='CPI'}>selected<{/if}>>CPI</option>
                            	<option value="CPT" <{if $data.method=='CPT'}>selected<{/if}>>CPT</option>
                            </select>
                            </td>
                        </tr>
                        
                        <tr>
                            <th class="w120">状态：</th>
                            <td>
                            	<select name="status">
                            		<option value=1 <{if $data.status==1}>selected<{/if}> >投放</option>
                            		<option value=2 <{if $data.status==2}>selected<{/if}> >暂停</option>
                            		<option value=3 <{if $data.status==3}>selected<{/if}> >停止</option>
                            	</select>
                            </td>
                        </tr>
                         <tr>
                            <th class="w120">锁屏图片：</th>
                            <td>
                            	<div style="float:left;padding-right:10px;">
                            		<div style="text-align:center;">大图(1024*768)</div>
                            		<div><img src="<{$data.img1|default:'/static/images/default.jpg'|escape:html}>" width=152 id="img1_img" alt="大图(1024*768)"/></div>
                            		<div style="text-align:center;padding-top:10px;"><input type="hidden" name="img1" id="img1" class="textinput w270" value="<{$data.img1|escape:html}>" />&nbsp;<input type="button" class="upload_img1" value=" 上传图片 "></div>
                            	</div>
                            	<div style="float:left;padding-right:10px;">
                            		<div style="text-align:center;">大图(800*480)</div>
                            		<div><img src="<{$data.img2|default:'/static/images/default.jpg'|escape:html}>" width=152 id="img2_img" alt="大图(800*480)"/></div>
                            		<div style="text-align:center;padding-top:10px;"><input type="hidden" name="img2" id="img2" class="textinput w270" value="<{$data.img2|escape:html}>" />&nbsp;<input type="button" class="upload_img2" value=" 上传图片 "></div>
                            	</div>
                            	<div style="float:left;padding-right:10px;">
                            		<div style="text-align:center;">大图(480*320)</div>
                            		<div><img src="<{$data.img3|default:'/static/images/default.jpg'|escape:html}>" width=152 id="img3_img" alt="大图(480*320)"/></div>
                            		<div style="text-align:center;padding-top:10px;"><input type="hidden" name="img3" id="img3" class="textinput w270" value="<{$data.img3|escape:html}>" />&nbsp;<input type="button" class="upload_img3" value=" 上传图片 "></div>
                            	</div>
                            </td>
                        </tr>
                        <tr>
                            <th class="w120">链接地址：</th>
                            <td><input type="text" name="url" class="textinput w270" value="<{$data.url|escape:html}>" /></td>
                        </tr>
                        <tr>
                            <th class="w120">创建时间：</th>
                            <td><input type="text" name="" class="textinput w270" value="<{$data.ctime|escape:html}>" disabled="disabled" /></td>
                        </tr>
                        <tr>
                            <th class="w120">权重：</th>
                            <td><input type="text" name="<{$data.orderid}>" class="textinput w270" value="<{$data.orderid|escape:html}>"  onkeyup="value=value.replace(/[^\d]/g,'');" /></td>
                        </tr>
                        <tr>
                        	<th>分类属性</th>
                        	<td><textarea name="attr" style="width:370px; height:200px;float:left;"><{$data.attr|escape:html}></textarea>
                        	<div style="float:right;overflow:hidden;">
                        	
                        	<br><font color=red>*注意</font>:<br/>请不要使用英文半角引号(双/单)
                        	</div>
                        	</td>
                        </tr>
                        <tr>
                        	<th>描述</th>
                        	<td><textarea name="describe" style="width:370px; height:200px;"><{$data.describe|escape:html}></textarea></td>
                        </tr>
                    </table>
                </div>
                
                <div class="box-footer">
                    <div class="box-footer-inner">
                    	<input type="submit" value="确定提交" /> 或 <a href="/?s=AdvertClass&a=content&ac=list">取消</a>
                    </div>
                </div>
                </form>
            </div><!--/ con-->
            
        </div>    
    </div><!--/ container-->

</div>
<script>
$(function(){
	$('#modify_form').submit(function(){
		$(this).find('input,select').each(function(){
			var e	= $(this).attr('e');
			if(e && e==="false" && $(this).val()==""){
				alert('必要项不能为空');
				$(this).focus();
				return false;
			}
		});
	});
})
$('#stime,#etime').datetimepicker({
    //showOn: "button",
    //buttonImage: "./css/images/icon_calendar.gif",
    //buttonImageOnly: true,
    showSecond: true,
    timeFormat: 'hh:mm:ss',
    stepHour: 1,
    stepMinute: 1,
    stepSecond: 1
});
</script>
<{elseif $ac =='list'}>
<div class="wrap">
    <div class="container">

        <div id="main">
            
            <div class="con">
            	
                  <div class="table">
                  	<div class="th">
                    	<div class="form">
                        <div class="fl">
                        	<select name="cid" id="s_cid" onchange="var v=this.value;window.location.href='/?s=AdvertClass&a=content&ac=list&cid='+v">
                        	<option value=0>全部分类</option>
                        	<{$select}>
                        	</select>&nbsp;&nbsp;&nbsp;&nbsp;<input type="button" onclick="window.location.href='/?s=AdvertClass&a=content&ac=add&cid='+document.getElementById('s_cid').value" value="添加内容"/>
                        </div>
                       
                        </div>
                    </div>
                    <form action='/?s=AdvertClass&a=content' method='post'>
                    <table class="admin-tb" id="datatable">
                    <thead>
                        <tr>
                        	<th><input type="checkbox" id="sall"><label for="sall">全选</label></th>
                            <th>广告名称</th>
                            <th>广告状态</th>
                            <th>投放类型</th>
                            <th>广告单价</th>
                            <th>广告预算</th>
                            <th>广告消耗</th>
                            <th>广告剩余</th>
                            <th>展示数</th>
                            <th>有效数</th>
                            <th>转化率</th>
                            <th>分类名</th>
                            <th width="161">操作</th>
                        </tr>
					</thead>
					<tbody id="class_item">
					<{if $list}>
					<{foreach from=$list name=n item=i}>
					<tr  childindex="1">
						<td><input type="checkbox" name="id[]" value="<{$i.aid}>" title="<{$i.aid}>"><{$i.aid}></td>
	                    <td><a href="/?s=AdvertClass&a=content&ac=edit&id=<{$i.aid}>" ><{$i.name}></a></td>   
	                    <td><a href="/?s=AdvertClass&a=content&ac=edit&id=<{$i.aid}>" >
	                    <{if $i.status==1}>
                            	<div style="background-color: green;width:20px;height:20px;float:left;margin-right:5px;display: inline;"></div>
                            	<font><b>投放</b></font>
                            	<{else if $i.status==2}>
                            	<div style="background-color: yellow;width:20px;height:20px;float:left;margin-right:5px;display: inline;"></div>
                            	<font><b>暂停</b></font>
                            	<{else if $i.status==3}>
                            	<div style="background-color: red;width:20px;height:20px;float:left;margin-right:5px;display: inline;"></div>
                            	<font><b>停止</b></font>
                        <{/if}>
                            </a></td>   
	                    <td><a href="/?s=AdvertClass&a=content&ac=edit&id=<{$i.aid}>" ><{$i.method}></a></td>   
	                    <td><a href="/?s=AdvertClass&a=content&ac=edit&id=<{$i.aid}>" ><{$i.price}></a></td>   
	                    <td><a href="/?s=AdvertClass&a=content&ac=edit&id=<{$i.aid}>" ><{$i.totle_budget}></a></td>   
	                    <td><a href="/?s=AdvertClass&a=content&ac=edit&id=<{$i.aid}>" ><{$i.used_budget}></a></td>   
	                    <td><a href="/?s=AdvertClass&a=content&ac=edit&id=<{$i.aid}>" ><{$i.totle_budget-$i.used_budget}></a></td>   
	                    <td><a href="/?s=AdvertClass&a=content&ac=edit&id=<{$i.aid}>" ><{$i.display_num}></a></td>   
	                    <td><a href="/?s=AdvertClass&a=content&ac=edit&id=<{$i.aid}>" ><{$i.valuable_num}></a></td>   
	                    <td><a href="/?s=AdvertClass&a=content&ac=edit&id=<{$i.aid}>" ><{eval round($i.valuable_num/$i.display_num,4)*100}>%</a></td>   
	                    <td><a href="/?s=AdvertClass&a=content&ac=list&cid=<{$i.cid}>"><{$i.classname}></a></td>
	                    <td>
	                        [<a href="/?s=AdvertClass&a=content&ac=edit&id=<{$i.aid}>&sname=<{$sname}>">修改</a>] &nbsp; [<a href="/?s=AdvertClass&a=content&ac=del&id=<{$i.aid}>&sname=<{$sname}>" onclick="return confirm('删除后不能恢复,确定删除?');">删除</a>]
	                    </td>
	                    </tr>
					<{/foreach}>
					<{/if}>
					</tbody>
                    
                    
                    </table>
                    <div class="th">
                    	<div class="form">
                        <input type='hidden' name='commit' value='1' />
                        <input type='radio' name='ac' value='del' checked />删除
                        <input type="submit" value="  确  定  " onclick="return confirm('请注意删除操作不能恢复,确定操作?');" />&nbsp;&nbsp; 
                        </div>
                    </div>
                    </form>
                </div>
            </div><!--/ con-->            
        </div>    
    </div><!--/ container-->
</div>
<script>
$('#sall').click(function(){
	var state	= $(this).attr('checked');
	var form	= $(this).parents('form');
	if(state){
		form.find('input[type=checkbox][name^=id]').attr('checked',true);
	}else{
		form.find('input[type=checkbox][name^=id]').attr('checked',false);
	}
});
</script>
<{/if}>
<style type="text/css">
	.js_search_msg{ position:absolute; background:#fff; border:1px solid #CEDEAE;}
	.js_search_msg li{ padding:3px 5px; cursor:pointer;}
	.js_search_msg li.active{ background:#EBF4D8}
</style>


